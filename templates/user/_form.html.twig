<div class="container">
    {{ form_start(form) }}
    <div class="form-row">
        <div class="col-md-4 mb-3">
            {{ form_label(form.name) }}
            <div class="input-group">
                <div class="input-group-prepend">
                    <span class="input-group-text" id="inputGroupPrepend">@</span>
                </div>
                {{ form_widget(form.name, {'attr': {'class': 'form-control','placeholder':'Name','aria-describedby':'inputGroupPrepend','required':true}}) }}
                <div class="invalid-feedback">
                    {{ form_errors(form.name) }}
                </div>
            </div>
        </div>
        <div class="col-md-4 mb-3">
            {{ form_label(form.email) }}
            {{ form_widget(form.email, {'attr': {'class': 'form-control','placeholder':'Email'}}) }}
            <div class="valid-feedback">
                Looks good!
            </div>
        </div>
        <div class="col-md-4 mb-3">
            {{ form_label(form.password) }}
            {{ form_widget(form.password, {'attr': {'class': 'form-control','placeholder':'Password'}}) }}
            <div class="valid-feedback">
                Looks good!
            </div>
        </div>
    </div>
    <div class="form-group row">
        {{ form_label(form.name, 'Status', {'label_attr': {'class': 'col-sm-2 col-form-label'}}) }}
        <div class="col-sm-10">
            {{ form_widget(form.status, {'attr': {'class': 'form-control','placeholder':'Status'}}) }}
        </div>
    </div>
    <div class="form-group row">
        {{ form_label(form.name, 'Role', {'label_attr': {'class': 'col-sm-2 col-form-label'}}) }}
        <div class="col-sm-10">
            {{ form_widget(form.roles, {'attr': {'class': 'custom-select my-1 mr-sm-2'}}) }}
        </div>
    </div>
    <button type="submit" class="btn btn-primary my-1">{{ button_label|default('Save') }}</button>
    {{ form_end(form) }}
</div>
